@model FileManager.PL.Models.City

@{
    ViewData["Title"] = "City Details";
}

<h1>City Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<h3 class="mt-4">Locations in this City</h3>

@if (Model.Locations != null && Model.Locations.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var location in Model.Locations)
            {
                <tr>
                    <td>@location.Name</td>
                    <td>@location.Address</td>
                    <td>
                        <a asp-controller="Locations" asp-action="Details" asp-route-id="@location.Id" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No locations have been added to this city yet.</p>
}

<div class="mt-3">
    <a asp-controller="Locations" asp-action="Create" asp-route-cityId="@Model.Id" class="btn btn-success">Add Location</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
